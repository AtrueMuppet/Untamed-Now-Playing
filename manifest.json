{
	"manifest_version": 2,
	"name": "Untamed Now Playing",
	"version": "0.3",
	"description": "Saves 'now playing' data locally, which inturn can be displayed on an XSplit overlay",
	"background": { "scripts": ["lib/jquery.min.js", "lib/proxy.js", "lib/pages/background.js"] },
	"options_page": "options.html",
	"plugins": [{"path": "lib/npapi-file-io-32.dll", "public": false}],
	"icons":{
		"128":"ico/main_128.png"
	},
	"browser_action": {
		"default_title": "Untamed Now Playing",
		"default_icon": "ico/icon.png"
	},
	"permissions": [
		"tabs",
		"*://ah.fm/*",
		"*://www.ah.fm/*",
		"*://di.fm/*",
		"*://www.di.fm/*",
		"*://grooveshark.com/*",
		"*://www.grooveshark.com/*",
		"*://last.fm/*",
		"*://www.last.fm/*",
		"*://pandora.com/*",
		"*://*.pandora.com/*",
		"*://soundcloud.com/*",
		"*://www.soundcloud.com/*",
		"*://turntable.fm/*",
		"*://www.turntable.fm/*",
		"*://youtube.com/*",
		"*://www.youtube.com/*",
		"*://api.justin.tv/*",
		"*://api.own3d.tv/*",
		// grooveshark cdn
		"*://*.gs-cdn.net/*",
		// pandora cdn
		"*://*.p-cdn.com/*",
		// soundcloud cdn
		"*://*.sndcdn.com/*",
		// turntable cdns
		"*://images.mndigital.com/*",
		"*://images.musicnet.com/*"
	],
	"content_scripts": [ {
		"js": [ "lib/jquery.min.js", "lib/proxy.js", "content.js" ],
		"matches": [
			"*://ah.fm/*",
			"*://www.ah.fm/*",
			"*://di.fm/*",
			"*://www.di.fm/*",
			"*://grooveshark.com/*",
			"*://www.grooveshark.com/*",
			"*://last.fm/*",
			"*://www.last.fm/*",
			"*://pandora.com/*",
			"*://www.pandora.com/*",
			"*://soundcloud.com/*",
			"*://www.soundcloud.com/*",
			"*://turntable.fm/*",
			"*://www.turntable.fm/*",
			"*://youtube.com/*",
			"*://www.youtube.com/*"
		] 
	} ]
}
