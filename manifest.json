{
	"manifest_version": 2,
	"name": "Untamed Now Playing",
	"version": "0.3",
	"description": "Saves 'now playing' data locally, which inturn can be displayed on an XSplit overlay",
	"update_url": "http://ipaddr.me/unp/updates.xml",
	"background": { "scripts": ["lib/jquery.min.js", "lib/proxy.js", "lib/pages/background.js"] },
	"options_page": "options.html",
	"plugins": [{"path": "lib/npapi-file-io-32.dll", "public": false}],
	"icons":{
		"128":"ico/main_128.png"
	},
	"browser_action": {
		"default_title": "Untamed Now Playing",
		"default_icon": "ico/icon.png"
	},
	"permissions": [
		"tabs",
		"*://8tracks.com/*",
		"*://*.8tracks.com/*",
		"*://ah.fm/*",
		"*://www.ah.fm/*",
		"*://deezer.com/*",
		"*://www.deezer.com/*",
		"*://di.fm/*",
		"*://www.di.fm/*",
		"*://grooveshark.com/*",
		"*://www.grooveshark.com/*",
		"*://iheart.com/*",
		"*://www.iheart.com/*",
		"*://jango.com/*",
		"*://www.jango.com/*",
		"*://last.fm/*",
		"*://*.last.fm/*",
		"*://pandora.com/*",
		"*://*.pandora.com/*",
		"*://plug.dj/*",
		"*://www.plug.dj/*",
		"*://up.seoul.fm/*",
		"*://songza.com/*",
		"*://www.songza.com/*",
		"*://soundcloud.com/*",
		"*://www.soundcloud.com/*",
		"*://tunein.com/*",
		"*://www.tunein.com/*",
		"*://turntable.fm/*",
		"*://www.turntable.fm/*",
		"*://vk.com/*",
		"*://www.vk.com/*",
		"*://we7.com/*",
		"*://*.we7.com/*",
		"*://youtube.com/*",
		"*://www.youtube.com/*",
		"*://api.justin.tv/*",
		"*://api.own3d.tv/*",
		// grooveshark cdn
		"*://*.gs-cdn.net/*",
		// jango cdn
		"*://*.album.images.jango.com/*",
		// pandora cdn
		"*://*.p-cdn.com/*",
		// soundcloud cdn
		"*://*.sndcdn.com/*",
		// songza and turntable cdns
		"*://images.mndigital.com/*",
		"*://images.musicnet.com/*"
	],
	"content_scripts": [ {
		"all_frames": true,
		"js": [ "lib/jquery.min.js", "lib/proxy.js", "content.js" ],
		"matches": [
			"*://8tracks.com/*",
			"*://www.8tracks.com/*",
			"*://ah.fm/*",
			"*://www.ah.fm/*",
			"*://deezer.com/*",
			"*://www.deezer.com/*",
			"*://di.fm/*",
			"*://www.di.fm/*",
			"*://grooveshark.com/*",
			"*://www.grooveshark.com/*",
			"*://iheart.com/*",
			"*://www.iheart.com/*",
			"*://jango.com/*",
			"*://www.jango.com/*",
			"*://last.fm/*",
			"*://www.last.fm/*",
			"*://pandora.com/*",
			"*://www.pandora.com/*",
			"*://plug.dj/*",
			"*://www.plug.dj/*",
			"*://up.seoul.fm/nowplaying.html",
			"*://songza.com/*",
			"*://www.songza.com/*",
			"*://soundcloud.com/*",
			"*://www.soundcloud.com/*",
			"*://tunein.com/*",
			"*://www.tunein.com/*",
			"*://turntable.fm/*",
			"*://www.turntable.fm/*",
			"*://vk.com/*",
			"*://www.vk.com/*",
			"*://we7.com/*",
			"*://www.we7.com/*",
			"*://youtube.com/*",
			"*://www.youtube.com/*"
		] 
	} ]
}
